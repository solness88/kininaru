<h2>ユーザーの新規追加</h2>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="user_signup">
    <div class="form-group row">
      <div><%= f.label :名前, class:"text_field col-sm-3" %></div>
      <div><%= f.text_field :name, placeholder: "Name", class:"text_field col-sm-6" %></div>
    </div>
    <div class="form-group row">
      <div><%= f.label :メール, class:"text_field col-sm-3" %></div>
      <div><%= f.email_field :email, placeholder: "Email", class:"text_field col-sm-6" %></div>
    </div>
    <div class="form-group row">
      <div><%= f.label :パスワード, class:"text_field col-sm-3" %></div>
      <div><%= f.password_field :password, placeholder: "Password", class:"text_field col-sm-6" %></div>
    </div>
    <div class="form-group row">
      <div><%= f.label :パスワード（確認）, class:"text_field col-sm-3" %></div>
      <div><%= f.password_field :password_confirmation, placeholder: "Password", class:"text_field col-sm-6" %></div>
    </div>
    <div class="form-group row">
      <div><%= f.label :写真, class:"text_field col-sm-3" %></div>
      <div><%= f.file_field :image, class:"text_field col-sm-6" %></div>
    </div>
    <div><%= f.submit "ユーザーを追加する" %></div>
  </div>
<% end %>
