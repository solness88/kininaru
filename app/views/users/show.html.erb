                        <input type="button" class="comment_form_btn" value="コメント欄">
                      </p>
                      <!-- このcomments_areaというHTMLのidを取得して、そのdivの部分だけを更新する -->
                      <div id="comments_area<%= user_news.id %>">
                        <%= render partial: 'comments/index', locals: { comments: user_news.comments, new: user_news } %>
                      </div>
                      <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
                      <div style="display: none" class="comments_form<%= user_news.id %>">
                        <%= render partial: 'comments/form', locals: { comment: user_news.comments.build, new: user_news } %>
                      </div>

                      <!-- コメント入力欄の表示・非表示を切り替え -->
                      <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
                      </script>
                      <script>
                        $('.comment_form_btn').click(function(){
                          $('.comments_form<%= user_news.id %>').fadeToggle('slow');
                        });
                      </script>

                      <div class="testtesttest">
                      <% @favorite = current_user.favorites.find_by(new_id: user_news.id) %>
                      <% unless user_news.user_id == current_user.id %>
                        <% if @favorite.present? %>
                          <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
                        <% else %>
                          <%= link_to 'お気に入りする', favorites_path(new_id: user_news.id), method: :post, class: 'btn btn-primary' %>
                        <% end %>
                      <% end %>
                      </div>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>

      <!-- お気に入りしたニュースを表示 -->
      <div class="card">
        <div class="card-header" id="header-4b">
          <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#card-4b" aria-expanded="false" aria-controls="card-4b">
              お気に入りしたニュース
          </button>
        </div>
        <div id="card-4b" class="collapse" aria-labelledby="header-4b" data-parent="#accordion-4">
          <div class="card-body">
            <% @favorite_news.each do |favorite_news| %>
            <div class="toppage_kininaru_article">
