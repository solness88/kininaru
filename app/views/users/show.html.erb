<div class="toppage_kininaru col-lg-3">
<h1><%= @user.name %>さんのおすすめ</h1>

  <!-- ユーザー詳細ページにおすすめニュースを表示 -->
  <% @recommend_news.each do |recommend_news| %>
    <div class="toppage_kininaru_article">
      <div>
        <div><%= link_to recommend_news.title, recommend_news.link, class:"kininaru_article_text" %></div>
          <div class="logos_horizontal">
            <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#Modal<%= recommend_news.id %>">
              コメント
            </button>
            <div data-toggle="modal" data-target="#Modal<%= recommend_news.id %>">
              <i class="far fa-comment"></i>
            </div>
            <%= link_to news_path(recommend_news.id, post: {recommend: false}), method: :put do %>
              <div><i class="fas fa-star" style="color: orange;"></i></div>
            <% end %>
            <div class = "heart_<%= recommend_news.id %>">
              <%= render partial: 'favorites/heart', locals: { new: recommend_news } %>
            </div>
            <%= link_to news_path(recommend_news.id), method: :delete do %>
              <div><i class="far fa-trash-alt"></i></div>
            <% end %>
          </div>
      </div>
      <div>
        <div><%= image_tag recommend_news.image, class:"kininaru_image" %></div>
      </div>
    </div>

  <!-- 「おすすめニュース」のモーダル -->
    <div class="modal fade" id="Modal<%= recommend_news.id %>" tabindex="-1" role="dialog" aria-labelledby="Modal" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="Modal">
              <div class="d-flex align-items-end"><%= link_to recommend_news.title, recommend_news.link %></div>
              <div><%= image_tag recommend_news.image, class:"kininaru_image modal_image" %></div>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>
              <%= image_tag recommend_news.user.image.url, class:"comment_user_image" %>
              <%= recommend_news.user.name %>さんのコメント
              <input type="button" class="comment_form_btn" value="コメント欄">
            </p>
            <!-- このcomments_areaというHTMLのidを取得して、そのdivの部分だけを更新する -->
            <div id="comments_area<%= recommend_news.id %>">
              <%= render partial: 'comments/index', locals: { comments: recommend_news.comments, new: recommend_news } %>
            </div>
            <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
            <div style="display: none" class="comments_form<%= recommend_news.id %>">
              <%= render partial: 'comments/form', locals: { comment: recommend_news.comments.build, new: recommend_news } %>
            </div>

            <!-- コメント入力欄の表示・非表示を切り替え -->
            <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
            </script>
            <script>
              $('.comment_form_btn').click(function(){
                $('.comments_form<%= recommend_news.id %>').fadeToggle('slow');
              });
            </script>

            <div class="testtesttest">
            <% @favorite = current_user.favorites.find_by(new_id: recommend_news.id) %>
            <% unless recommend_news.user_id == current_user.id %>
              <% if @favorite.present? %>
                <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
              <% else %>
                <%= link_to 'お気に入りする', favorites_path(new_id: recommend_news.id), method: :post, class: 'btn btn-primary' %>
              <% end %>
            <% end %>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>










  <!-- 「気になる」したニュースを表示 -->
