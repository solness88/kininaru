                  <i class="far fa-star"></i>
                <% end %>
                <div class = "heart_<%= user_news.id %>">
                  <%= render partial: 'favorites/heart', locals: { new: user_news } %>
                </div>
                <%= link_to news_path(user_news.id), method: :delete do %>
                  <div><i class="far fa-trash-alt"></i></div>
                <% end %>
                </div>
              </div>
              <div>
                <div><%= image_tag user_news.image, class:"kininaru_image" %></div>
              </div>
            </div>
            <% end %>


            <!-- 「気になる」したニュースのモーダル -->
              <div class="modal fade" id="Modal<%= user_news.id %>" tabindex="-1" role="dialog" aria-labelledby="Modal" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="Modal">
                        <div class="d-flex align-items-end"><%= link_to user_news.title, user_news.link %></div>
                        <div><%= image_tag user_news.image, class:"kininaru_image modal_image" %></div>
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p>
                        <%= image_tag user_news.user.image.url, class:"comment_user_image" %>
