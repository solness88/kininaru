            <!-- お気に入りしたニュースのモーダル -->
              <div class="modal fade" id="Modal<%= favorite_news.id %>" tabindex="-1" role="dialog" aria-labelledby="Modal" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="Modal">
                        <div class="d-flex align-items-end"><%= link_to favorite_news.title, favorite_news.link %></div>
