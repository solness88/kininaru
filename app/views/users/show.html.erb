                        <div style="display: none" class="comments_form<%= favorite_news.id %>">
                          <%= render partial: 'comments/form', locals: { comment: favorite_news.comments.build, new: favorite_news } %>
                        </div>

                        <!-- コメント入力欄の表示・非表示を切り替え -->
                        <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
                        </script>
                        <script>
                          $('.comment_form_btn').click(function(){
                            $('.comments_form<%= favorite_news.id %>').fadeToggle('slow');
                          });
                        </script>
                      <% end %>

                      <div class="testtesttest">
                      <% @favorite = current_user.favorites.find_by(new_id: favorite_news.id) %>
                      <% unless params[:id] == current_user.id %>
                        <% if @favorite.present? %>
                          <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
                        <% else %>
                          <%= link_to 'お気に入りする', favorites_path(new_id: favorite_news.id), method: :post, class: 'btn btn-primary' %>
                        <% end %>
                      <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

            <% end %>
        </div>
      </div>
    </div>
  </div>
