<!DOCTYPE html>
<html>
  <head>
    <title>Kininaru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class="header_items">
        <li class="header_item"><%= link_to "気になるニュース", news_index_path %></li>
        <% if current_user && current_user.admin? %>
          <li class="header_item_user "><%= link_to "ユーザーを見る", admin_users_path %></li>
        <% else %>
          <li class="header_item_user"><%= link_to "ユーザーを見る", users_path %></li>
        <% end %>
        <li class="header_item"><a href="#">チャット</a></li>
        <% if logged_in? %>
          <li class="header_item"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li class="header_item"><%= link_to "ログイン", new_session_path %></li>
        <% end %>
      </ul>
    </header>

    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-1">
        </div>
        <div class="toppage_articles col-lg-7">
          <% @top_headlines.each do |news| %>
          <div class="toppage_article">
              <% if news.urlToImage.nil? %>
                <%= image_tag 'atlas.jpg', class:"article_image" %>
              <% else %>
                <%= image_tag news.urlToImage, class:"article_image" %>
              <% end %>
            <%= link_to news.title, news.url, class:"article"%>
            <% if logged_in? %>
              <%= button_to '気になる', {controller: '/news', action: 'create'},
                                       {params: {
                                                new: {
                                                      title: news.title,
                                                      link: news.url,
                                                      image: news.urlToImage,
                                                      user_id: current_user.id
                                                    },
                                                },
                                        class:"kininaru_button"} %>
            <% end %>
          </div>
          <% end %>
        </div>

        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
        <% if logged_in? %>
          <%= link_to "Profile", user_path(current_user.id) %>
          <%= link_to "Logout", session_path(current_user.id), method: :delete %>
        <% else %>
          <%= link_to "Sign up", new_user_path %>
          <%= link_to "Login", new_session_path %>
        <% end %>

        <%= yield %>

        <div class="col-lg-1">
        </div>
      </div>
    </div>


    <footer>
      <p>気になるニュース</p>
      <p>© 2021 Kininaru News</p>
    </footer>
  </body>
</html>
