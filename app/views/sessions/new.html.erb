<h1>Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
<div class="user_signup">
  <div class="form-group row">
    <div><%= f.label :email, class:"text_field col-sm-3" %></div>
    <div><%= f.email_field :email, class:"text_field col-sm-6" %></div>
  </div>
  <div class="form-group row">
    <div><%= f.label :password, class:"text_field col-sm-3" %></div>
    <div><%= f.password_field :password, class:"text_field col-sm-6" %></div>
  </div>
  <div><%= f.submit "Log in" %></div>
<% end %>
